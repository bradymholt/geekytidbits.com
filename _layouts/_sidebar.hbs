<script>
  document.addEventListener('DOMContentLoaded', (e) => {
    // Headshot drawing canvas
    let canvas = document.getElementById('head-shot-canvas');
    let ctx = null;
    let canvasOffsetX = null;
    let canvasOffsetY = null;

    const onMouseOrTouchStart = function (e) {
      if (!ctx) {
        ctx = canvas.getContext('2d');
        ctx.lineWidth = 1;
        ctx.strokeStyle = '#237ab2';

        const rect = canvas.getBoundingClientRect();
        canvasOffsetX = rect.left;
        canvasOffsetY = rect.top;
      }

      if (ctx) {
        ctx.beginPath();
      }
    }

    const onMouseOrTouchMove = function (e) {
      if (ctx) {
        const mouseX = e.clientX || e.targetTouches[0].clientX;
        const mouseY = e.clientY || e.targetTouches[0].clientY;
        const relativeX = mouseX - canvasOffsetX;
        const relativeY = mouseY - canvasOffsetY;

        if (!e.ctrlKey) {
          ctx.lineTo(relativeX, relativeY);
          ctx.stroke();
        } else {
          ctx.moveTo(relativeX, relativeY);
        }
      }
    }

    canvas.onmouseenter = onMouseOrTouchStart;
    canvas.onmousemove = onMouseOrTouchMove;
    canvas.ontouchstart = onMouseOrTouchStart;
    canvas.ontouchmove = onMouseOrTouchMove;

  });
</script>
